{
    "name" : "PickaHue",
    "description" : "A color picker for Hue",
    "version" : "1.0",
    "manifest_version" : 3,

    "permissions" : ["activeTab","scripting"],
    "host_permissions": ["<all_urls>"],

    "action" : {
        "default_popup" : "popup.html"
    },


    "icons" : {
        "16" : "/images/icon16.png",
        "32" : "/images/icon32.png",
        "48" : "/images/icon48.png"
    }
}
